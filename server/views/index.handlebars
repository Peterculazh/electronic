<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Welcome!</h1>
        </div>
        <div class="col-12">
            <form class="form" action="/add" method="POST">
                <div class="form-group">
                    <label for="form-fullname">ФИО</label>
                    <input type="text" id="form-fullname" name="fullname" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="form-phone">Телефон</label>
                    <input type="tel" id="form-phone" name="phone" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="form-email">Email</label>
                    <input type="email" id="form-email" name="email" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </form>
        </div>
        <div class="col-12 table-container">
            <table class="table table-bordered table-stripped">
                <thead>
                    <tr>
                        <th>ФИО</th>
                        <th>Телефон</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                    <tr>
                        <td class="table-fullname">{{fullname}}</td>
                        <td class="table-phone">{{phone}}</td>
                        <td class="table-email">{{email}}</td>
                        <td class="table-form-col">
                            <form class="table-form">
                                <input type="hidden" name="id" value="{{id}}">
                                <button class="table-form-btn table-form-update">Изменить</button>
                            </form>
                            <form class="table-form" method="POST" action="/delete">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="id" value="{{id}}">
                                <button class="table-form-btn">Удалить</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>